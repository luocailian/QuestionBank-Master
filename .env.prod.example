# 生产环境配置示例
# 复制此文件为 .env.prod 并修改相应的值

# 版本号
VERSION=v1.0.0

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=questionbank_master
MYSQL_USER=questionbank
MYSQL_PASSWORD=your_secure_db_password_here

# 应用密钥（请使用强密码）
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_chars
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_at_least_32_chars

# API配置
VITE_API_BASE_URL=https://your-domain.com/api/v1

# 域名配置
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# 监控配置
ENABLE_MONITORING=true
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# 日志配置
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
